{{>navbar}}


<div class="flex-ctr grow1 laser-background">
    <div class="grid-1x0-gap2 w-50 txt-white">
        {{#each packages}}

            <div>
                <form action="/enroll/create-checkout-session" method="POST" class="h-inherit ">
                    <fieldset class="flex-TTB-ctr h-inherit">

                        <legend>{{@key}} hrs package</legend>
                        <p class="font-calibri">{{this}}</p>
                        <p>Price: {{get_package_price @key}}</p>
                        <input type="hidden" name="hours" value="{{@key}}"/>
                        <button type="submit" id="checkout-button" class="xlg btn-luminous-blue font-orbitron">Enroll</button>

                    </fieldset>

                </form>
            </div>

        {{/each}}

    </div>

    <div class='light x1'></div>
    <div class='light x2'></div>
    <div class='light x3'></div>
    <div class='light x4'></div>
    <div class='light x5'></div>
    <div class='light x6'></div>
    <div class='light x7'></div>
    <div class='light x8'></div>
    <div class='light x9'></div>
</div>

