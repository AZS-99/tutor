<div class="fill-screen flex-ctr">
    <form action="/users/sign_up" method="POST" >
        <fieldset class="grid-2x0-gap1 p3">
            <input type="text" name="forename" class="xlg" placeholder="John" pattern="^([A-Z]|[a-z])[a-z]{1,20}$">
            <input type="text" name="surname" class="xlg" placeholder="Doe" pattern="^([A-Z]|[a-z])[a-z]{1,20}$">

            <input type="email" name="email" class="xlg span-all-cols" placeholder="Email" pattern="^[a-z_\d.]{2,30}@[a-z]{2,11}\.[a-z]{2,4}$" required />
            <input type="password" name="password" class="xlg span-all-cols" placeholder="Password"
                   pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[\w-]{8,30}$" autocomplete="new-password" required/>

            <input type="hidden" name="_csrf" value="{{csurf_token}}" />

            <div class="span-all-cols flex-spread">
                <button class="xlg btn-luminous">Submit</button>
                <button class="xlg btn-luminous-red" type="button"><label for="sign_up">Cancel</label></button>
            </div>
        </fieldset>

    </form>
</div>
