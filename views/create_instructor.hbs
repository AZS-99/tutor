<div class="flex-TTB-ctr grow1 laser-background txt-white">
    <form action="/manage/register_instructor" method="POST" >
        <fieldset class="grid-2x0-gap1 p3">
            <input type="text" name="forename" class="xlg" placeholder="Forename" pattern="^([A-Z]|[a-z])[a-z]{1,20}$">
            <input type="text" name="surname" class="xlg" placeholder="Surname" pattern="^([A-Z]|[a-z])[a-z]{1,20}$">

            <input type="email" name="email" class="xlg span-all-cols" placeholder="Email" pattern="^[a-z_\d.]{2,30}@[a-z]{2,11}\.[a-z]{2,4}$" required />
            <input type="password" name="password" class="xlg span-all-cols" placeholder="Password"
                   pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[\w_@./#&+-]{8,30}$" autocomplete="new-password" required/>


            <div class="grid-2x0">
                {{#each subjects}}
                    <input type="checkbox" name="subjects" value="{{id}}" id="{{id}}" />
                    <label for="{{id}}">{{subject}}</label>
                {{/each}}
            </div>


            <div class="span-all-cols flex-spread">
                <button class="xlg btn-luminous font-orbitron">Submit</button>
                <a href="/">
                    <button class="xlg btn-luminous-red font-orbitron" type="button"><label for="sign_up">Cancel</label></button>
                </a>
            </div>

            <label class="lg">Already have an account? <a href="/users/log_in" class="B txt-royalblue">Log in</a></label>

            <input type="hidden" name="position" value="INSTRUCTOR"/>

        </fieldset>

    </form>
</div>